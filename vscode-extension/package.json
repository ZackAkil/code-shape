{
  "name": "code-shape-analyzer",
  "displayName": "Code Shape Analyzer",
  "description": "Visualize and analyze the shape of your codebase",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other", "Visualization"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeShape.analyzeWorkspace",
        "title": "Analyze Workspace",
        "category": "Code Shape"
      },
      {
        "command": "codeShape.analyzeFolder",
        "title": "Analyze Folder...",
        "category": "Code Shape"
      },
      {
        "command": "codeShape.showVisualization",
        "title": "Show Visualization",
        "category": "Code Shape",
        "icon": "$(graph)"
      },
      {
        "command": "codeShape.showHistory",
        "title": "Show Analysis History",
        "category": "Code Shape"
      },
      {
        "command": "codeShape.refreshAnalysis",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "codeShape.configureIgnorePatterns",
        "title": "Configure Ignore Patterns",
        "category": "Code Shape"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codeShapeExplorer",
          "name": "Code Shape",
          "icon": "$(graph)",
          "contextualTitle": "Code Shape Analysis"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codeShapeExplorer",
        "contents": "No analysis available.\n[Analyze Workspace](command:codeShape.analyzeWorkspace)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeShape.refreshAnalysis",
          "when": "view == codeShapeExplorer",
          "group": "navigation"
        },
        {
          "command": "codeShape.showVisualization",
          "when": "view == codeShapeExplorer",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "codeShape.analyzeFolder",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "Code Shape Analyzer",
      "properties": {
        "codeShape.threshold": {
          "type": "number",
          "default": 100,
          "description": "Threshold for ideal file size (lines of code)"
        },
        "codeShape.maxFiles": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to display in visualization"
        },
        "codeShape.ignorePatterns": {
          "type": "array",
          "default": [],
          "description": "Additional patterns to ignore during analysis"
        },
        "codeShape.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show code shape score in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}